+static void mrst_wait_for_LP_CTRL_FIFO(struct drm_device *dev)
+{
+	int timeout = 0;
+	udelay(500);
+
+	/* This will time out after approximately 2+ seconds */
+	while ((timeout < 20000) && (REG_READ(GEN_FIFO_STAT_REG) &
+							LP_CTRL_FIFO_FULL)) {
+		udelay(100);
+		timeout++;
+	}
+
+	if (timeout == 20000)
+		DRM_INFO("MIPI: LP CMD FIFO was never cleared!\n");
+}
