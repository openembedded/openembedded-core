+				{
+					return(0);
+				}
+			}
+
+
+
+			ui32Space = SpaceInStream(psStream);
+		}
+	}
+
+
+
+	if (ui32Space <= (ui32InBuffSize + 4))
+	{
+		ui32InBuffSize = ui32Space - 4;
+	}
+
+
+
