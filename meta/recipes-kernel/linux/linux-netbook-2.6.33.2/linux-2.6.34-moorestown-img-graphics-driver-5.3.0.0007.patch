+#if UPLOAD_FW_BY_DMA
+int topaz_upload_fw(struct drm_device *dev, enum drm_lnc_topaz_codec codec)
+{
+	struct drm_psb_private *dev_priv = dev->dev_private;
+	const struct topaz_codec_fw *cur_codec_fw;
