+static bool mrstDSI_clockInit(DRM_DRIVER_PRIVATE_T *dev_priv)
+{
+	u32 Htotal = 0, Vtotal = 0, RRate = 0, mipi_2xclk = 0;
+	u32 i = 0;
+	u32 *p_mipi_2xclk = NULL;
+
+#if 0 /* JLIU7_PO old values */
