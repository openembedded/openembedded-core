+	topaz_test_sync(dev, 0x55, sync_value);
+
+	ret = psb_mmu_virtual_to_pfn(psb_mmu_get_default_pd(dev_priv->mmu),
+				topaz_priv->topaz_sync_offset, &real_pfn);
+	if (ret != 0) {
+		PSB_DEBUG_GENERAL("psb_mmu_virtual_to_pfn failed,exit\n");
+		return;
