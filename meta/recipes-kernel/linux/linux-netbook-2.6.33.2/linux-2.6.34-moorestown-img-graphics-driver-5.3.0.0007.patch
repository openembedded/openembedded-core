+				       uint64_t value)
+{
+	struct drm_encoder *pEncoder = connector->encoder;
+
+	if (!strcmp(property->name, "scaling mode") && pEncoder) {
+		struct psb_intel_crtc *pPsbCrtc =
+					to_psb_intel_crtc(pEncoder->crtc);
+		uint64_t curValue;
+
+		if (!pPsbCrtc)
