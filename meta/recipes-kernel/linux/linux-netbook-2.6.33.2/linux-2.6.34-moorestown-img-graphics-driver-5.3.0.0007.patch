+	       psbfb->base.width,
+	       psbfb->base.height);
+
+	if (psbfb_p)
+		*psbfb_p = psbfb;
+
+	mutex_unlock(&dev->struct_mutex);
+
+	return 0;
+out_err1:
+	fb->funcs->destroy(fb);
+out_err0:
+	mutex_unlock(&dev->struct_mutex);
+	return ret;
