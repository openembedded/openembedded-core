+			break;
+
+		case PVR_DRM_PCI_DEV:
+			*pui32Field = PCI_SLOT(psPCIDev->devfn);
+			break;
+
+		case PVR_DRM_PCI_FUNC:
+			*pui32Field = PCI_FUNC(psPCIDev->devfn);
+			break;
+
+		default:
+			return -EFAULT;
+	}
+
+	return 0;
