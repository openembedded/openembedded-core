+	end_addr = 0;
+	ret = 0;
+
+	ret = rar_get_address(RAR_TYPE_VIDEO, &start_addr,
+			      &end_addr);
+	if (ret) {
+		printk(KERN_ERR "failed to get rar region info\n");
+		return;
+	}
+        dev_priv->rar_region_start = (uint32_t) start_addr;
+	if (!ret)
+		dev_priv->rar_region_size =
+			end_addr - dev_priv->rar_region_start + 1;
+
+#endif
+	return;
+}
