+				psCommand->psSrcSync[i].ui32ReadOpsPending,
+				psCommand->psSrcSync[i].ui32WriteOpsPending));
+	}
+
+
+	*ppsCommand = psCommand;
+
+	return PVRSRV_OK;
+}
