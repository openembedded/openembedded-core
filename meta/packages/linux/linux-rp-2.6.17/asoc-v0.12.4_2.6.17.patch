+#ifdef CONFIG_PXA27x
+static u32 pxa27x_set_audio_clk(unsigned int rate, unsigned int fs)
+{
+	u32 aclk = 0, div = 0;
+
+	if (rate == 0 || fs == 0)
+		return 0;
+
+	switch(rate){
+	case 8000:
+	case 16000:
+	case 32000:
+	case 48000:
+	case 96000:
+		aclk = 0x2 << 4;
+		div = 12288000 / (rate * fs);
+		break;
+	case 11025:
+	case 22050:
+	case 44100:
+	case 88200:
+		aclk = 0x1 << 4;
+		div = 11289600 / (rate * fs);
+		break;
+	}
+
+	aclk |= ffs(div) - 1;
+	return aclk;
+}
+#endif
