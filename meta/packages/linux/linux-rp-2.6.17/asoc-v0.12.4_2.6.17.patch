+static void pxa2xx_ssp_shutdown(struct snd_pcm_substream *substream)
+{
+	struct snd_soc_pcm_runtime *rtd = substream->private_data;
+
+	if (!rtd->cpu_dai->active) {
+		ssp_disable(&ssp[rtd->cpu_dai->id]);
+		ssp_exit(&ssp[rtd->cpu_dai->id]);
+	}
+}
