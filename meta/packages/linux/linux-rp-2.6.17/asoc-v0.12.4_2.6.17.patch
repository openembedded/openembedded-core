+static unsigned int ak4535_config_sysclk(struct snd_soc_codec_dai *dai,
+	struct snd_soc_clock_info *info, unsigned int clk)
+{
+	if (info->fs != 256)
+		return 0;
+
+	/* we only support 256 FS atm */
+	if (info->rate * info->fs == clk) {
+		dai->mclk = clk;
+		return clk;
+	}
+
+	return 0;
+}
