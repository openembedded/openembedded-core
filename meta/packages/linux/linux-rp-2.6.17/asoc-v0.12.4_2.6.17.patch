+static unsigned int pxa_ssp_config_sysclk(struct snd_soc_cpu_dai *dai,
+	struct snd_soc_clock_info *info, unsigned int clk)
+{
+	/* audio clock ? (divide by 1) */
+	if (clksrc[dai->id] == 3) {
+		switch(info->rate){
+		case 8000:
+		case 16000:
+		case 32000:
+		case 48000:
+		case 96000:
+			return 12288000;
+			break;
+		case 11025:
+		case 22050:
+		case 44100:
+		case 88200:
+			return 11289600;
+		break;
+		}
+	}
+
+	/* pll */
+	return sysclk[dai->id];
+}
