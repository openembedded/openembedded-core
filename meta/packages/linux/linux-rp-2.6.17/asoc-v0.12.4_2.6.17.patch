+		break;
+	case SNDRV_PCM_FMTBIT_S20_3LE:
+		voice |= 0x0004;
+		break;
+	case SNDRV_PCM_FMTBIT_S24_LE:
+		voice |= 0x0008;
+		break;
+	case SNDRV_PCM_FMTBIT_S32_LE:
