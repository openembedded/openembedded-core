+	switch (bo->mem.mem_type) {
+	case TTM_PL_VRAM:
+		if (bo->mem.proposed_flags & TTM_PL_FLAG_TT)
+			return cur_placement | TTM_PL_FLAG_TT;
+		else
+			return cur_placement | TTM_PL_FLAG_SYSTEM;
+	default:
+		return cur_placement | TTM_PL_FLAG_SYSTEM;
+	}
+}
