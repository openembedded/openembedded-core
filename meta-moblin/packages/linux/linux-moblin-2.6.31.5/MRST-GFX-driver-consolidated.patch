+#endif /* PRINT_JLIU7 */
+
+		dev_priv->DBI_CB_pointer = 0;
+		/* exit sleep mode */
+		*(dev_priv->p_DBI_commandBuffer + dev_priv->DBI_CB_pointer++) = exit_sleep_mode;
+
+#if 0 /*FIXME JLIU7 */
+		/* Check MIPI Adatper command registers */
