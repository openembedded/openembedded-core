+
+	/* FIXME jliu7 DBI hard coded for TPO TD043MTEA2 LCD panel */
+    dev_priv->dbi_pixelClock = 33264; /*KHz*/
+    dev_priv->dbi_HsyncWidth = 10;
+    dev_priv->dbi_HbackPorch = 210;
+    dev_priv->dbi_HfrontPorch = 36;
+    dev_priv->dbi_HactiveArea = 800;
