+	{
+		return;
+	}
+
+	/*
+	 * We don't support dual DSI yet. May be in POR in the future.
+	 */
+	if (dev_priv->dual_display)
+	{
+		return;
+	}
+
+
+    powermgmt_using_hw_begin(dev->pdev, PSB_DISPLAY_ISLAND, true);
+
+    if (on) {
+        if (dev_priv->dpi & (!dev_priv->dpi_panel_on))
