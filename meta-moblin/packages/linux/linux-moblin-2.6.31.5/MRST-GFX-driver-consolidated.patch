+	mutex_lock(&cmd_buffer->mutex);
+	if (cmd_buffer->sync_obj != NULL)
+		ttm_fence_sync_obj_unref(&cmd_buffer->sync_obj);
+	mutex_unlock(&cmd_buffer->mutex);
+out_unlock:
+	return ret;
+}
