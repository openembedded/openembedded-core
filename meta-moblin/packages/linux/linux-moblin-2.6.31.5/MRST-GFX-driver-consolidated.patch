+		/*save palette (gamma) */
+		for (i = 0; i < 256; i++)
+			dev_priv->save_palette_a[i] = PSB_RVDC32(PALETTE_A + (i<<2));
+
+		/*save performance state*/
+		dev_priv->savePERF_MODE = PSB_RVDC32(MRST_PERF_MODE);
