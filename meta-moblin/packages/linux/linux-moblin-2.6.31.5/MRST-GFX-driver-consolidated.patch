+		REG_WRITE(MIPI_COMMAND_LENGTH_REG, 1);
+		REG_WRITE(MIPI_COMMAND_ADDRESS_REG, (u32)dev_priv->p_DBI_commandBuffer | BIT0);
+
+		dev_priv->dbi_panel_on = true;
+	}
+/*FIXME JLIU7 */
