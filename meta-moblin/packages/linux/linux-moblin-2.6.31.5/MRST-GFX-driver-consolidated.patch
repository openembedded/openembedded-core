+            do {
+                pp_status = REG_READ(PP_STATUS);
+            } while ((pp_status & (PP_ON | PP_READY)) == PP_READY);
+	}
+	else if ((!dev_priv->dpi) & (!dev_priv->dbi_panel_on))
