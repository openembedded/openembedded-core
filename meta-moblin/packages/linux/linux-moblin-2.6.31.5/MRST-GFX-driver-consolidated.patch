+		dev_priv->saveOV_OGAMC5 = PSB_RVDC32(OV_OGAMC5);
+
+	} else { /*PSB*/
+		/*save crtc and output state*/
+		mutex_lock(&dev->mode_config.mutex);
+		list_for_each_entry(crtc, &dev->mode_config.crtc_list, head) {
