+		dev_priv->saveHBLANK_A = PSB_RVDC32(HBLANK_A);
+		dev_priv->saveHSYNC_A = PSB_RVDC32(HSYNC_A);
+		dev_priv->saveVTOTAL_A = PSB_RVDC32(VTOTAL_A);
+		dev_priv->saveVBLANK_A = PSB_RVDC32(VBLANK_A);
